
// MODUL: MP3 TF 16P

// ESP IO26 -> DFPLAYER TX
// ESP IO27 -> DFPLAYER RX (brez uporov oboje)

//če ne prime/ga ne zazna, odklopi IO26 in priklopi nazaj

#include <Arduino.h>
#include "DFRobotDFPlayerMini.h"

#define RXD2 26
#define TXD2 27
//HardwareSerial mySoftwareSerial(1);
DFRobotDFPlayerMini myDFPlayer;

void setup()
{
  Serial2.begin(9600, SERIAL_8N1, RXD2, TXD2);
  Serial.begin(115200);
  
  myDFPlayer.begin(Serial2);
bool cakam=1;
while(cakam)
{
  if(Serial2.available() >0) {
      Serial.println("Serial is available."); 
     Serial.println("début");
     myDFPlayer.play(1);
     delay(500);
     cakam=0;
  } else {
        Serial.println("Serial is not available.");
}      
}
delay(500);

}

void loop()
{
static uint8_t muzka=1;
for(int i=0;i<6;i++)
{
  myDFPlayer.play(muzka+i);
  delay(2000);
}
}
